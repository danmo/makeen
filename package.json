{
  "name": "makeen",
  "version": "0.1.0",
  "engines": {
    "node": "6.x.x"
  },
  "description": "",
  "main": "index.js",
  "scripts": {
    "postinstall": "npm run bootstrap",
    "bootstrap": "lerna bootstrap",
    "dev": "babel-watch server.js",
    "babel-node": "babel-node",
    "debug": "babel-node --inspect server.js",
    "nodemon": "nodemon --exec npm run babel-node -- server.js",
    "start": "babel-node server.js",
    "clean": "rm -rf node_modules/ && rm -rf packages/*/node_modules",
    "clean-setup": "npm run clean && yarn",
    "lint": "eslint .",
    "open-monitor": "open http://localhost:3003/status-monitor"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/makeen-project/makeen.git"
  },
  "author": "Victor Zamfir <victor@makeen.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/makeen-project/makeen/issues"
  },
  "homepage": "https://github.com/makeen-project/makeen#readme",
  "dependencies": {
    "catbox": "~7.1.2",
    "catbox-memory": "~2.0.4",
    "catbox-mongodb": "~3.0.0",
    "confidence": "~3.0.2",
    "environment-override": "1.0.2",
    "dotenv": "~4.0.0",
    "glue": "~4.1.0",
    "good": "~7.1.0",
    "good-console": "~6.4.0",
    "good-file": "~6.0.1",
    "good-squeeze": "~5.0.1",
    "hapi": "~16.1.0",
    "hoek": "~4.1.0",
    "moment": "~2.17.1",
    "npm-run-all": "~4.0.2",
    "pretty-format": "~19.0.0",
    "react": "~15.4.0"
  },
  "devDependencies": {
    "babel-cli": "~6.23.0",
    "babel-core": "~6.23.1",
    "babel-eslint": "~7.1.1",
    "babel-plugin-transform-async-to-generator": "~6.22.0",
    "babel-plugin-transform-decorators-legacy": "~1.3.4",
    "babel-plugin-transform-object-rest-spread": "~6.23.0",
    "babel-plugin-transform-runtime": "~6.23.0",
    "babel-preset-es2015": "~6.22.0",
    "babel-preset-modern-node": "~3.2.0",
    "babel-preset-react": "~6.23.0",
    "babel-preset-react-hmre": "~1.1.1",
    "babel-preset-stage-0": "~6.22.0",
    "babel-watch": "~2.0.3",
    "core-decorators": "~0.15.0",
    "eslint": "~3.17.1",
    "eslint-config-airbnb": "~14.1.0",
    "eslint-import-resolver-webpack": "~0.8.1",
    "eslint-plugin-import": "~2.2.0",
    "eslint-plugin-jsx-a11y": "~4.0.0",
    "eslint-plugin-react": "~6.10.0",
    "lerna": "2.0.0-beta.38",
    "nodemon": "~1.11.0"
  },
  "babel": {
    "presets": [
      "modern-node",
      "stage-0",
      "react"
    ],
    "plugins": [
      "transform-es2015-destructuring",
      "transform-object-rest-spread",
      "transform-async-to-generator",
      "transform-decorators-legacy"
    ],
    "env": {
      "development": {
        "presets": [
          "react-hmre"
        ]
      }
    }
  }
}
